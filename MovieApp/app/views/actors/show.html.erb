<div class="w3-main actor-show">
  <div class="container">
    
    <!-- Display an actor's info here -->
    <div class="info">
    </div>
    <div class="actor">
      <!-- actor image -->
      <%= image_tag @actor.image %>
      <div class="info">
        <h3 class="actor-name"> <%= @actor.first_name %> <%= @actor.last_name %> </h3>
        <p class="actor-bio"> <%= @actor.bio %> </p>
      </div>
    </div>

    <h2>Movies</h2>
    <!-- Display each movie's info here -->
  <% @movies.each do |movie|%>
  	<div class="w3-quarter w3-container w3-padding-24">
      <%= image_tag movie.image %>
      <h3> <%= movie.title %> </h3>
      <p> <%= movie.release_year %> </p>
      <p><%= movie.plot %></p>
      <%= link_to "Learn more", movie_path(movie) %>
    </div>
  <%end%>
  </div>
</div>